<div class="container my-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="mb-4">
        <i class="fas fa-pen-to-square me-2"></i>New Review
      </h1>

      <%= simple_form_for [@restaurant, @review], html: { class: 'mt-3' } do |f| %>
        <div class="mb-3">
          <%= f.input :content, label: "Your Review", input_html: { class: "form-control" } %>
        </div>

        <div class="mb-3">
          <%= f.input :rating, label: "Rating", input_html: { class: "form-control" } %>
        </div>

        <%= f.submit "Submit Review", class: "btn btn-primary" %>
      <% end %>

      <div class="mt-3">
        <%= link_to restaurant_path(@restaurant), class: "btn btn-outline-secondary" do %>
          <i class="fas fa-arrow-left me-2"></i>Back to restaurant
        <% end %>
      </div>
    </div>
  </div>
</div>
