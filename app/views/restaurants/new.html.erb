<div class="container my-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="card-title mb-4 text-center">
        <i class="fas fa-utensils me-2"></i>New Restaurant
      </h1>

      <%= simple_form_for @restaurant, html: { class: 'mt-3' } do |f| %>
        <div class="mb-3">
          <%= f.input :category, collection: Restaurant::CATEGORIES, label: "Category", input_html: { class: "form-select" }, wrapper_html: { class: "form-group" } %>
        </div>

        <div class="mb-3">
          <%= f.input :name, label: "Name", input_html: { class: "form-control" }, wrapper_html: { class: "form-group" } %>
        </div>

        <div class="mb-3">
          <%= f.input :address, label: "Address", input_html: { class: "form-control" }, wrapper_html: { class: "form-group" } %>
        </div>

        <%= f.submit "Create Restaurant", class: "btn btn-primary mt-4 w-100" %>
      <% end %>

      <div class="mt-3 text-center">
        <%= link_to restaurants_path, class: "btn btn-outline-secondary" do %>
          <i class="fas fa-arrow-left me-2"></i>Back to restaurants
        <% end %>
      </div>
    </div>
  </div>
</div>
