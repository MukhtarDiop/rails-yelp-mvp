<div class="container my-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="mb-3">
        <i class="fas fa-utensils me-2"></i><%= @restaurant.name %>
      </h1>
      <p><i class="fas fa-map-marker-alt me-2 text-muted"></i><%= @restaurant.address %></p>
      <p><i class="fas fa-tag me-2 text-muted"></i>Category: <%= @restaurant.category %></p>

      <hr>

      <h2 class="mt-4"><i class="fas fa-star me-2 text-warning"></i>Reviews</h2>
      <ul class="list-group mb-4">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item">
            <strong><i class="fas fa-star text-warning me-1"></i><%= review.rating %>:</strong>
            <%= review.content %>
          </li>
        <% end %>
      </ul>

      <h3 class="mt-4"><i class="fas fa-pen me-2"></i>Add a Review</h3>
      <%= simple_form_for [@restaurant, @review], html: { class: 'mt-3' } do |f| %>
        <div class="mb-3">
          <%= f.input :content, label: "Your Review", input_html: { class: "form-control" } %>
        </div>
        <div class="mb-3">
          <%= f.input :rating, label: "Rating", input_html: { class: "form-control" } %>
        </div>
        <%= f.submit "Submit Review", class: "btn btn-success" %>
      <% end %>

      <div class="mt-4">
        <%= link_to restaurants_path, class: "btn btn-outline-primary" do %>
          <i class="fas fa-arrow-left me-2"></i>Back to restaurants
        <% end %>
      </div>
    </div>
  </div>
</div>
